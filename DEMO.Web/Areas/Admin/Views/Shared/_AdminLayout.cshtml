    <style>
        .inner-navs {
            display: none;
        }

        .inner-navs.show {
            display: block;
        }

        .menu-item > a.opened i.bi-chevron-down {
            transform: rotate(180deg);
            transition: transform 0.2s ease-in-out;
        }

        .popup-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1050;
        }

        .popup-backdrop {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* dark overlay */
        }

        .popup-message {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 24px 32px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 400px;
            width: 90%;
            animation: fadeInScale 0.3s ease-in-out;
        }

        .popup-message p {
            font-size: 1.1rem;
            margin-bottom: 1rem;
            color: #333;
            font-weight: 500;
        }

        #closeAlertPopupBtn {
            background-color: #6c757d; /* Bootstrap gray */
            color: white;
            border: none;
            padding: 8px 20px;
            border-radius: 6px;
            font-size: 0.9rem;
            transition: background-color 0.2s ease;
        }

        #closeAlertPopupBtn:hover {
            background-color: #5a6268;
        }

        .popup-icon {
            font-size: 20px;
        }

        .success .popup-icon::before {
            content: '✔️'; /* or use a success icon font class */
            color: green;
        }

        .error .popup-icon::before {
            content: '❌'; /* or use an error icon font class */
            color: red;
        }

    </style>
